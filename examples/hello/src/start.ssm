; vim: ft=smasm
@include "gb.ssi"

@section "WRAM0"

stackTop: @ds 128
stackBase:

@section "BANK0"

Start::
    di
    ld sp, stackBase

    ; copy tile data
    ld de, $8010
    ld hl, Letters
    ld bc, Letters.Len
    call MemCopy

    ; write tile map
    ld de, $9800
    ld hl, Message
    ld bc, Message.Len
    call MemCopy

    ; scroll to center the message
    ld a, 200
    ldh [GB_SCY], a
    ldh [GB_SCX], a

.Wait:
    halt
    jp .Wait

Message:
    @db 1, 2, 3, 3, 4
.Len = * - @rel Message

@print @strfmt "message is %d bytes\n", Message.Len

